<!DOCTYPE HTML>
<html>
   <head>
      <title>BaroTube - NPM</title>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
      <link rel="stylesheet" href="/css/main.css" />
   </head>
   <body class="is-preload">
      <div id="page-wrapper">
         <!-- Header -->
         <header id="header">
            <h1><a href="/">BaroTube - NPM</a> by mr baris</h1>
            <nav id="nav">
               <ul>
                  <li><a href="/">Home</a></li>
                  <% if (!user) { %>
                    <li><a href="/login" class="button">Login</a></li>
                  <% } else { %>
                    <li><a href="/logout" class="button">Logout</a></li>
                  <% } %>
               </ul>
            </nav>
         </header>
         <!-- Main -->
         <section id="main" class="container">
            <header>
               <h2>LMAO</h2>
               <p>HELO MF (;</p>
            </header>
            <div class="row">
               <div class="col-12">
                  <!-- Form -->
                  <section class="box">
                    <% if (!client.data.find(val => val.status === `verified_${user.id}`) && !client.data.find(val => val.status === `waiting_${user.id}`)) { %>
                     <h3>Key Generate FORM</h3>
									   <form method="post" action="/getkey">
										   <div class="row gtr-uniform gtr-50">
											   <div class="col-6 col-12-mobilep">
										   		<input type="text" name="name" id="name" value="" placeholder="Name" required/>
										   	 </div>
										   	 <div class="col-6 col-12-mobilep">
												   <input type="email" name="email" id="email" value="" placeholder="Email" required/>
											   </div>
											   <div class="col-12">
												   <textarea name="message" id="message" placeholder="Your intended use of the API." rows="6" required></textarea>
											   </div>
											   <div class="col-12">
												   <ul class="actions">
													   <li><input type="submit" value="Send Form" /></li>
													   <li><input type="reset" value="Reset" class="alt" /></li>
												   </ul>
											   </div>
										   </div>
									   </form>
                    <% } else if (client.data.find(val => val.status === `waiting_${user.id}`)) { %>
                     <h3 align="center">Form Status</h3>
                     <p align="center">Waiting...</p>
                     <p align="center">You will be informed by mail.</p>
                    <% } else if (client.data.find(val => val.status === `verified_${user.id}`)) { %>
                     <h3 align="center" style="font-weight: bold;">It's ur API Key</h3>
                     <div class="tooltip">
                       <span class="tooltiptext" id="myTooltip">Copy to clipboard</span>
										   <input type="text" onmouseout="outFunc()" onclick="copyFunc()" id="copyFunc" value="<%= client.data.find(val => val.status === `verified_${user.id}`).key %>" placeholder="<%= client.data.find(val => val.status === `verified_${user.id}`).key %>"/>
                     </div>
                    <% } %>
                  </section>
               </div>
            </div>
         </section>
         <!-- Footer -->
         <footer id="footer">
            <ul class="copyright">
               <li>&copy; BaroTube. All rights reserved.</li>
               <li>Design: <a target="_blank" href="http://html5up.net">HTML5 UP</a></li>
            </ul>
         </footer>
      </div>
      <!-- Scripts -->
     
      <script>
      function copyFunc() {
        var copyText = document.getElementById("copyFunc")
        document.getElementById("copyFunc").click();
        navigator.clipboard.writeText(copyText.placeholder);
        var tooltip = document.getElementById("myTooltip");
        tooltip.innerHTML = "Copied!";
      }
      function outFunc() {
        var tooltip = document.getElementById("myTooltip");
        tooltip.innerHTML = "Copy to clipboard";
      }
      </script>
     
      <script src="/js/jquery.min.js"></script>
      <script src="/js/jquery.dropotron.min.js"></script>
      <script src="/js/jquery.scrollex.min.js"></script>
      <script src="/js/browser.min.js"></script>
      <script src="/js/breakpoints.min.js"></script>
      <script src="/js/util.js"></script>
      <script src="/js/main.js"></script>
   </body>
</html>
